/* pages/promoters/promoters.wxss */

.prombanner {
  width: 100%;
  position: relative;
}

.prom-img {
  width: 100%;
  height: 250rpx;
}

.prombanner text {
  display: block;
  width: 375rpx;
  position: absolute;
  left: 46rpx;
  top: 24rpx;
  font-size: 24rpx;
  color: #fff;
  line-height: 48rpx;
}

.pro-text-con {
  padding: 10rpx 46rpx 25rpx;
  width: 100%;
  display: block;
  box-sizing: border-box;
  border-bottom: 2px solid #efefef;
}

.pro-tit {
  font-size: 24rpx;
  color: #141414;
  font-weight: bold;
  display: block;
  line-height: 45rpx;
}

.pro-text {
  font-size: 20rpx;
  display: block;
  line-height: 30rpx;
  color: #141414;
}

.share {
  height: 100rpx;
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
}

.share-btnr {
  display: block;
  float: left;
  width: 100%;
  text-align: center;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #fff;
  background: #ff1849;
  font-weight: bold;
  border-radius: 0;
}
